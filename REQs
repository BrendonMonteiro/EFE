.popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  z-index: 1000;
  display: none; /* Inicialmente escondido */
  text-align: center;
  max-width: 90%; /* Largura máxima do pop-up em dispositivos móveis */
  box-sizing: border-box; /* Garante que o padding não ultrapasse a largura */
}

/* Estilo para o conteúdo do pop-up */
.popup-content h2 {
  font-size: 24px;
  margin-bottom: 20px;
}

.popup-content button {
  background: #709bb4;
  font-family: "Poppins", sans-serif;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 10px;
}

.popup-content button:hover {
  font-family: "Poppins", sans-serif;
  background-color: #688fa5;
}

/* Estilo para o botão de fechar "X" */
.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 24px;
  font-weight: bold;
  cursor: pointer;
}

.close-btn:hover {
  color: red;
}

/* Media Queries para dispositivos móveis */
@media (max-width: 768px) {
  .popup {
    width: 80%; /* Pop-up ocupa 80% da largura da tela */
    padding: 15px;
  }

  .popup-content h2 {
    font-size: 20px; /* Reduzir o tamanho da fonte no título */
  }

  .popup-content button {
    padding: 8px 15px; /* Ajustar o tamanho do botão */
  }

  .close-btn {
    top: 5px;
    right: 10px;
    font-size: 20px; /* Reduzir o tamanho do botão de fechar */
  }
}

@media (max-width: 480px) {
  .popup {
    width: 90%; /* Pop-up ocupa 90% da largura da tela em dispositivos muito pequenos */
    padding: 10px;
  }

  .popup-content h2 {
    font-size: 18px; /* Tamanho da fonte ainda menor em dispositivos menores */
  }

  .popup-content button {
    padding: 8px 12px; /* Botão com tamanho ajustado */
  }

  .close-btn {
    top: 5px;
    right: 5px;
    font-size: 18px; /* Ajuste do tamanho do botão de fechar */
  }
}
