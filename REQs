    <script src="https://forumeiros.github.io/assets/src/form-generator/form-replace.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
    integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>
    <script>document.querySelector(".btn").addEventListener("click", function (event) {
        const dropdown = this.querySelector(".dropdown");
        dropdown.classList.toggle("show");
        event.stopPropagation();
    });
    
    document.addEventListener("click", function () {
        const dropdown = document.querySelector(".btn .dropdown");
        if (dropdown.classList.contains("show")) {
            dropdown.classList.remove("show");
        }
    });
    </script>
    <script>
        document.querySelectorAll("form").forEach(form => {
            form.addEventListener("submit", function(event) {
                // Evita o envio imediato do formulário para ver o efeito
                event.preventDefault();
                
                // Seleciona o botão de envio dentro do formulário atual
                const botao = form.querySelector("button[type='submit']");
                botao.textContent = "Postando...";
                botao.disabled = true;
    
                // Simula um tempo de espera ou envio
                setTimeout(() => {
                    botao.textContent = "Postado!";
                }, 2000); // 2000ms para exemplo; remova o setTimeout no uso real
            });
        });
    </script>
    <script>
function removeLoader() {
    var loader = document.getElementById('loader');
    loader.classList.add('fade-out');
    loader.addEventListener('animationend', function () {
        loader.style.display = 'none';
        document.body.style.overflow = 'auto'; // Restaura o scroll
    });
}

// Espera 5 segundos e depois chama a função para remover o loader
window.onload = function () {
    setTimeout(removeLoader, 600); // Agora o tempo é de 5 segundos
};
    </script>
<script>
  // Função para processar os campos do formulário
  function processFields(data) {
    let categorizedData = {};
    
    data.forEach(item => {
      if (item.name === "TAG") {
        // Separa as informações divididas por "/" e ignora valores vazios
        let values = item.value.split("/").filter(value => value.trim() !== "");
        values.forEach(value => {
          let category = getCategory(value.trim()); // Determina a categoria da TAG
          if (!categorizedData[category]) {
            categorizedData[category] = [];
          }
          categorizedData[category].push({
            name: item.name,
            value: value.trim()
          });
        });
      } else if (item.name !== "adicionarCampo" && item.name !== "addCampo") {
        // Adiciona outros campos
        if (!categorizedData[item.name]) {
          categorizedData[item.name] = [];
        }
        categorizedData[item.name].push(item);
      }
    });

    // Transforma o objeto categorizado em um array plano
    let processedData = [];
    Object.values(categorizedData).forEach(categoryItems => {
      processedData = processedData.concat(categoryItems);
    });

    // Adiciona a data ao array de dados processados
    let currentDate = formatDate(new Date()); // Formata a data
    processedData.push({ name: "date", value: currentDate });

    return processedData;
  }

  // Função para determinar a categoria da TAG
  function getCategory(tagValue) {
    // Categoriza com base no primeiro caractere
    let firstChar = tagValue.charAt(0).toUpperCase();
    return firstChar;
  }

  // Função para formatar a data no formato "dd/MM/yyyy HH:mm:ss"
  function formatDate(date) {
    let day = String(date.getDate()).padStart(2, '0');
    let month = String(date.getMonth() + 1).padStart(2, '0');
    let year = date.getFullYear();
    let hours = String(date.getHours()).padStart(2, '0');
    let minutes = String(date.getMinutes()).padStart(2, '0');
    let seconds = String(date.getSeconds()).padStart(2, '0');
    
    return `${day}/${month}/${year} ${hours}:${minutes}:${seconds}`;
  }

  // Função para enviar o formulário para a API
  function submitForm(formId) {
    let formElement = document.getElementById(formId);
    if (!formElement) {
      console.error(`Formulário com ID ${formId} não encontrado.`);
      return;
    }

    let formTitle = formElement.getAttribute("name"); // Obtém o título do form
    let formData = $(`#${formId} form`).serializeArray();

    // Adiciona o título do formulário aos dados
    formData.push({ name: "formTitle", value: formTitle });

    let processedData = processFields(formData);

    $.ajax({
      url: "https://api.apispreadsheets.com/data/Z2zYefD6XzSQC5TQ/",
      type: "post",
      data: processedData,
      success: function (response) {
        console.log("Formulário enviado com sucesso!", response);
      },
      error: function (xhr, status, error) {
        console.error("Erro ao enviar formulário:", error);
      }
    });
  }

  // Funções para envio de formulários específicos
  function submitForm1() { submitForm("form1"); }
  function submitForm2() { submitForm("form2"); }
  function submitForm4() { submitForm("form4"); }
  function submitForm5() { submitForm("form5"); }
  function submitForm6() { submitForm("form6"); }
  function submitForm7() { submitForm("form7"); }
  function submitForm8() { submitForm("form8"); }
  function submitForm9() { submitForm("form9"); }
  function submitForm10() { submitForm("form10"); }
  function submitForm11() { submitForm("form11"); }
  function submitForm13() { submitForm("form13"); }
  function submitForm14() { submitForm("form14"); }
  function submitForm15() { submitForm("form15"); }
</script>
<script>
  let activeForm = null;
  const formTitles = {
    form1: "ENTRADA DE MEMBROS",
    form2: "EXPULSÃO",
    form3: "LICENÇA/RESERVA",
    form4: "PROMOÇÃO",
    form5: "REBAIXAMENTO",
    form6: "SAÍDA",
    form7: "PROLONGAMENTO DE LICENÇA",
    form8: "RETORNO DE LICENÇA",
    form9: "MIGRAÇÃO DE CORPO",
    form10: "TRANSFERÊNCIA DE CONTA",
    form11: "REINTEGRAÇÃO",
    form12: "ATUALIZAÇÃO DA LISTAGEM",
    form13: "ADVERTÊNCIA",
    form14: "APROVAÇÃO EM CURSO",
    form15: "REALOAÇÃO MINISTERIAL",
  };

  function toggleForm(formId) {
  const newForm = document.getElementById(formId);
  const body = document.body;

  if (activeForm && activeForm !== newForm) {
    activeForm.style.display = "none";
    activeForm.classList.remove("active");
  }

  newForm.style.display = "flex";
  setTimeout(() => {
    newForm.classList.add("active");
    newForm.style.display = "block";
  }, 10); // Pequeno atraso para permitir a transição
  activeForm = newForm;
  body.classList.add("scrollable");

  // Atualiza o texto do botão
  const buttonText = formTitles[formId];
  document.querySelector('.btn span').textContent = buttonText;

  // Remove a classe active do item ativo anterior
  const activeItem = document.querySelector('.dropdown li.active');
  if (activeItem) {
    activeItem.classList.remove('active');
  }

  // Adiciona a classe active ao item clicado
  const newItem = document.querySelector(`.dropdown li[onclick="toggleForm('${formId}')"]`);
  if (newItem) {
    newItem.classList.add('active');
  }
}

document.addEventListener('DOMContentLoaded', function() {
  const items = document.querySelectorAll('.dropdown li');
  const selectedImageDiv = document.getElementById('selectedImage');
  const imageDisplay = document.getElementById('imageDisplay');

  items.forEach(item => {
    const handleClickOrTouch = function() {
      const iconImg = item.querySelector('.icon');
      if (iconImg) {
        imageDisplay.src = iconImg.src;
        selectedImageDiv.style.display = 'block';
      }
    };

    // Adiciona eventos de clique e toque
    item.addEventListener('click', handleClickOrTouch);
    item.addEventListener('touchstart', handleClickOrTouch);
  });
});

</script>
<script>
function gatherFormData() {
    if (!activeForm) return "";

    const formId = activeForm.id;
    console.log(formId);

    // Condição específica para form12
    if (formId === "form12") {
        var attlist_tag_value = $("#attlist_tag").val(); // Obtém o valor da tag
        const texto = `[font=Poppins][center][table style="border: none!important; overflow: hidden; border-radius: 15px; line-height: 1em; width: 65%" bgcolor="79a8c3"]` +
                      `[tr style="border: none!important; overflow: hidden"]` +
                      `[td style="border: none!important; overflow: hidden"]` +
                      `[img(18px,18px)]https://i.imgur.com/qmLa772.png[/img]\n\n` +
                      `[img]https://i.imgur.com/qz9m2VC.png[/img]\n` +                      
                      `[color=white][size=18][b][EFE] Atualização realizada! [${attlist_tag_value}] [/size][/b]\n` +
                      `[size=11]Em caso de dúvidas ou erros, entre em contato com um Estagiário+ da companhia.[/color][/size]\n\n`+
                      `[url=https://www.policiarcc.com/t31424-efe-lista-de-membros][size=11][b][color=white]ACESSAR A LISTAGEM DE MEMBROS[/color][/b][/size][/url]\n` +
                      `[/td][/tr][/table][/center][/font]`;

        return texto; // Retorna o BBCode específico para form12
    }

    let formData = "";

    if (formId === "form13") {
    const inputs = activeForm.querySelectorAll("input, select");
    let tipo = "";  // Corrigido para 'tipo' com letra minúscula
    let cargoNickname = "";  // Corrigido para 'cargoNickname' (nome consistente)
    let motivos = "";
    let permissao = "";  // Corrigido para 'permissao' com letra minúscula

    inputs.forEach((input) => {
        if (input.tagName.toLowerCase() === "select") {
            tipo = input.options[input.selectedIndex].innerText;  // Corrigido para 'tipo'
        } else {
            if (input.placeholder === "Nickname") {
                cargoNickname = input.value.trim();
            } else if (input.placeholder === "Motivo(s)") {
                motivos = input.value.trim();
            } else if (input.placeholder === "Permissão") {
                permissao = input.value.trim();  // Corrigido para 'permissao'
            }
        }
    });

    // Define a data atual e formata manualmente com mês em maiúscula
    const today = new Date();
    const monthToday = today.toLocaleDateString('pt-BR', { month: 'short' }).replace('.', '');
    const formattedToday = `${today.getDate().toString().padStart(2, '0')} ${monthToday.charAt(0).toUpperCase() + monthToday.slice(1)} ${today.getFullYear()}`;

    // Calcula a data de +30 dias e formata manualmente com mês em maiúscula
    const futureDate = new Date(today);
    futureDate.setDate(today.getDate() + 30);
    const monthFuture = futureDate.toLocaleDateString('pt-BR', { month: 'short' }).replace('.', '');
    const formattedFutureDate = `${futureDate.getDate().toString().padStart(2, '0')} ${monthFuture.charAt(0).toUpperCase() + monthFuture.slice(1)} ${futureDate.getFullYear()}`;

    // Formata o BBCode incluindo o intervalo de datas
    formData += `[font=poppins][size=18][center][color=#668ea5][b] ${tipo}\n\n`;
    formData += `[/b][/color][/center][/size][justify][b]Nickname:[/b] ${cargoNickname}\n`;
    formData += `[b]Motivo(s):[/b] ${motivos}\n`;
    formData += `[b]Período:[/b] ${formattedToday} a ${formattedFutureDate}\n`;
    formData += `[b]Permissão:[/b] ${permissao}\n`;
    formData += `[/justify][/font]`;

    return formData;
}

    // Adiciona título para os demais formulários (exceto form12 e form13)
    const title = formTitles[formId];
    formData += `[font=Poppins][size=18][center][color=#668ea5][b]${title}[/b][/color][/center][/size]\n[size=13][left]`;

    const inputs = activeForm.querySelectorAll("input, select, textarea");
    let placeholdersData = "";

    inputs.forEach((input) => {
        if (input.type !== "checkbox") {
            let placeholder =
                input.placeholder ||
                (input.options && input.options.length > 0
                    ? input.options[0].innerText
                    : "");
            const value = input.value.trim();
            if (value) {
                let formattedValue = value;
                if (input.type === "date" && (formId === "form1" || formId === "form2" || formId === "form4" || formId === "form5" || formId === "form6" || formId === "form11")) {
                    const dateParts = value.split("-");
                    formattedValue = `${dateParts[2]}/${dateParts[1]}/${dateParts[0]}`;
                }
                if (input.tagName.toLowerCase() === "select") {
                    placeholder = `${input.options[0].innerText}`;
                    formattedValue = input.options[input.selectedIndex].innerText;
                }

                // Processa TAG placeholder para múltiplas linhas
                if (placeholder === "cvop") {
                    const lines = formattedValue.split(" / ");
                    lines.forEach(line => {
                        placeholdersData += `[font=Poppins][b][color=#000000]${line}[/color][/b][/font]\n`;
                    });
                } else {
                    if (placeholder === "Cargo" && (formId === "form2" || formId === "form6")) {
                        // Adiciona espaçamento abaixo do placeholder "Cargo"
                        placeholdersData += `[b]${placeholder}[/b]: ${formattedValue}\n`;
                    } else {
                        placeholdersData += `[b]${placeholder}[/b]: ${formattedValue}\n`;
                    }
                }
            }
        }
    });

    // Adiciona placeholders ao formData
    formData += placeholdersData;

    // Inclui data apenas se for
    if (formId === "form1" || formId === "form2" || formId === "form6" || formId === "form11") {
        const today = new Date();
        const formattedDate = `${today.getDate().toString().padStart(2, '0')}/${(today.getMonth() + 1).toString().padStart(2, '0')}/${today.getFullYear()}`;
        formData += `[b]Data:[/b] ${formattedDate}\n`;
    }

    // Processa checkboxes
    const checkboxes = activeForm.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach((checkbox) => {
        if (checkbox.checked) {
            const label = checkbox.nextElementSibling.innerText.trim();
            formData += `\n[color=#668ea5][b]✓[/b][/color] ${label}\n`;
        }
    });

    // Fecha tags
    formData += `[/size][/font][/left]`;

    return formData; // Retorna o BBCode gerado para os demais formulários
}

(function ($) {
  "use strict";
  $(window).on("load", function () {
    $("form").on("submit", function (event) {
      event.preventDefault();

      // Verifica se todos os campos obrigatórios estão preenchidos
      let isValid = true;
      $(this).find("input[required], textarea[required], select[required]").each(function () {
        if ($(this).val().trim() === "") {
          isValid = false;
          $(this).addClass("error"); // Adiciona uma classe para destacar o campo vazio
        } else {
          $(this).removeClass("error"); // Remove a classe se o campo estiver preenchido
        }
      });

      if (!isValid) {
        alert("Há campos obrigatórios vazios. Por favor, preencha todos os campos antes de enviar.");
        return; // Interrompe o envio se houver campos vazios
      }

      const bbcodeMessage = gatherFormData();
      if (bbcodeMessage) {
        const formId = $(this).closest(".form-container").attr("id");
        const targetThread = formId === "form13" ? 38367 : 38026; // Alteração para definir o valor de 't' com base no formulário

        setTimeout(function () {
          $.post("/post", {
            t: targetThread, // Usa o valor definido em 'targetThread'
            message: bbcodeMessage,
            mode: "reply",
            post: 1,
          })
            .done(function () {
              // Exibe o pop-up de confirmação
              $("#popup").fadeIn();
              $("#blur-background").fadeIn();
              // Armazena o valor de 'targetThread' para ser utilizado no botão de conferência
              $("#popup").data("targetThread", targetThread);
            })
            .fail(function () {
              alert("Houve um erro! Tente novamente!");
            });
        }, 600);
      } else {
        alert("Preencha todos os campos!");
      }
    });

    // Função para o botão de conferir a postagem
    $("#checkPostBtn").on("click", function () {
      // Obtém o valor de 'targetThread' armazenado
      const targetThread = $("#popup").data("targetThread");
      location.href = "http://" + location.host + "/t" + targetThread + "-?view=newest";
    });

    // Função para o botão de postar novamente
    $("#postAgainBtn").on("click", function () {
      location.reload(); // Atualiza a página e reabre o formulário
    });

    // Função para fechar o pop-up
    $(".close-btn").on("click", function () {
      $("#popup").fadeOut();
      $("#blur-background").fadeOut();
    });
  });
})(jQuery);

      function retorna_horario() {
        const horario = new Date();
        horario.setMinutes(
          horario.getMinutes() + horario.getTimezoneOffset() - 180
        );
        let data_hoje = horario.getDate();
        if (data_hoje < 10) data_hoje = "0" + data_hoje;
        const meses = [
          "Jan",
          "Fev",
          "Mar",
          "Abr",
          "Mai",
          "Jun",
          "Jul",
          "Ago",
          "Set",
          "Out",
          "Nov",
          "Dez",
        ];
        const mes_hoje = meses[horario.getMonth()];
        const ano_hoje = horario.getFullYear();
        return `${data_hoje}/${mes_hoje}/${ano_hoje}`;
      }

      document.querySelectorAll(".data_hour").forEach((element) => {
        element.value = retorna_horario();
      });

      document.addEventListener("DOMContentLoaded", () => {
        const credits = document.querySelector(".credits");
        setTimeout(() => {
          credits.classList.add("show");
        }, 500); // Pequeno atraso para permitir a transição
      }); 
    </script>
  </body>
</html>
